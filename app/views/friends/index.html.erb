<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends">
<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend %>
    </p>
  <% end %>
  </tbody>
</table>

  
</div>

<%= link_to "New friend", new_friend_path %>
